<h2>Edit Raw Material</h2>

<form action="/raw-materials/<%= rawMaterial._id %>?_method=PUT" method="POST" class="mt-4">
  <div class="mb-3">
    <label class="form-label">Raw Material Name</label>
    <input type="text" name="name" class="form-control" value="<%= rawMaterial.name %>" required />
  </div>

  <div class="mb-3">
    <label class="form-label">Client</label>
    <select name="client" class="form-select" required>
      <% clients.forEach(c => { %>
        <option value="<%= c._id %>" <%= c._id.toString() === rawMaterial.client.toString() ? 'selected' : '' %>><%= c.name %></option>
      <% }) %>
    </select>
  </div>

  <div class="mb-3">
    <label class="form-label">HSN Code</label>
    <input type="text" name="HSN" class="form-control" value="<%= rawMaterial.HSN %>" required />
  </div>

  <div class="mb-3">
    <label class="form-label">Quantity</label>
    <input type="number" name="quantity" class="form-control" value="<%= rawMaterial.quantity %>" />
  </div>

  <button type="submit" class="btn btn-warning">💾 Update</button>
  <a href="/raw-materials" class="btn btn-secondary">↩️ Cancel</a>
</form>
