<h2>Stock History for: <%= material.name %></h2>

<a href="/raw-materials/<%= material._id %>/stock/new" class="btn btn-success mb-3">âž• Add Stock Entry</a>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Quantity</th>
      <th>Note</th>
    </tr>
  </thead>
  <tbody>
    <% transactions.forEach(tx => { %>
      <tr>
        <td><%= new Date(tx.date).toLocaleString() %></td>
        <td><%= tx.type %></td>
        <td><%= tx.quantity %></td>
        <td><%= tx.note || '-' %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
